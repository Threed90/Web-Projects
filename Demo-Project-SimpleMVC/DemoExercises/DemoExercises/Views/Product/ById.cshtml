@model ProductViewModel

@{
    ViewData["Title"] = "Product By Id";
}

<form method="post">
    <input type="number" name="id" />
    <button type="submit">Get Product</button>
</form>

@if (Model.Id == -256 && Model.Name == "Invalid Product")
{
    <h3>Add product Id in URL</h3>
}
else
{
    <div class="card" style="width: 18rem">
        <div class="card-header">
            @ViewBag.Title
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Product Name: @Model.Name
            </h5>
            <p class="card-text">
                Price @Model.Price lv.
            </p>
        </div>
    </div>
}


