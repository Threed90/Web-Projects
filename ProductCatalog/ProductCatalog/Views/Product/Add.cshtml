@using ProductCatalog.Models.DTO

@model  ProductDTO

@{
    ViewData["Title"] = "Add product";
}

<h1>Add Product</h1>

<form asp-action="Add" asp-controller="Product">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <input class="form-control" placeholder="Enter name" asp-for="Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <input class="form-control" placeholder="Enter price" asp-for="Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <input class="form-control" placeholder="Enter quantity" asp-for="Quantity">
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}