@using ProductCatalog.Models.DTO

@model List<ProductDTO>


@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price.ToString("F2")</td>
                <td>@product.Quantity</td>
                <td>
                    <a asp-route-id=@product.Id.ToString() asp-action="Edit" asp-controller="Product" class="btn btn-success">EDIT</a>
                </td>
                <td>
                    <a asp-route-id=@product.Id.ToString() asp-action="Details" asp-controller="Product" class="btn btn-secondary">DETAILS</a>
                </td>
                <td>
                    <form asp-action="Delete" asp-controller="Product" asp-route-id=@product.Id.ToString() method="post">
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>