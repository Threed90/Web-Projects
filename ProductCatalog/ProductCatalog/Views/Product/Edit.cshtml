@using ProductCatalog.Models.DTO

@model ProductDTO

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit product</h1>

<form asp-action="Edit" asp-controller="Product">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group mb-2">
        <input class="form-control" placeholder="Enter name" asp-for="Name" value=@Model.Name>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <input class="form-control" placeholder="Enter price" asp-for="Price" value=@Model.Price>
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group mb-2"> 
        <input class="form-control" placeholder="Enter quantity" asp-for="Quantity" value=@Model.Quantity>
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
