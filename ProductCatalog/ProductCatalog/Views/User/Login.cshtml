
@{
    ViewBag.Title = "User Login";
}


<form action="" class="user-form">
    <div class="user-fields-container">
        <label for="userName" class="user-label">User Name</label>
        <input type="text" name="userName" class="input-username">

        <label for="password" class="user-label">Password</label>
        <input type="password" name="password" class="input-password">

        <input type="submit" class="btn-login" value="Login">
    </div>

</form>